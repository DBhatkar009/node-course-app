doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet" href="/css/main.css")
        link(rel="stylesheet" href="/css/add-product.css")
    body 

        header.main-header
            nav.main-header_nav
                ul.main-header_nav_list
                    li.main-header_item
                        a.active(href="/") Shop
                    li.main-header_item
                        a(href="/admin/add-product") Add-Products

main 
    .grid
        each product in data
            article.card.product-item
                header.card__header
                    h1.product__title #{product.title}
            div.card__image
                img(src="https://images.theconversation.com/files/45159/original/rptgtpxd-1396254731.jpg?ixlib=rb-4.1.0&q=45&auto=format&w=754&fit=clip")
            div.card__content
                h2.product__price $19.99
                    p.product__description A very interesting book about so many even more interesting things!
                .card__actions
                    button.btn Add to Cart
